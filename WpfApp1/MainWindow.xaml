<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Data Processing" Height="400" Width="600">
    <StackPanel Margin="10">
        <Button Name="GenerateButton" Content="Generate Files" Click="GenerateButton_Click" />

        <StackPanel Margin="0,10,0,10">
            <TextBox Name="SubstringTextBox" Height="30" Width="200" />
            <TextBlock Text="Enter substring to remove" Foreground="Gray" Margin="5,0,0,0" />
        </StackPanel>

        <Button Name="MergeButton" Content="Merge Files" Click="MergeButton_Click" />
        <Button Name="ImportButton" Content="Import Data" Click="ImportButton_Click" />
        <Button Name="AddExcelButton" Content="Add Excel File" Click="AddExcelButton_Click" />

        <TextBox Name="StatusTextBox" Height="200" IsReadOnly="True" VerticalScrollBarVisibility="Auto"/>
    </StackPanel>
</Window>